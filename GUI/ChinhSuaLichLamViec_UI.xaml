<Window x:Class="GUI.ChinhSuaLichLamViec_UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="ChinhSuaLichLamViec_UI" Height="450" Width="800">
    <Grid>
        <Label Content="CHỈNH SỬA LỊCH LÀM VIỆC" HorizontalAlignment="Left" Margin="229,27,0,0" VerticalAlignment="Top" Height="38" Width="356" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold" Foreground="Red"/>
        <DataGrid x:Name="dgvLichLamViec" 
                  HorizontalAlignment="Left" 
                  Height="235" Margin="35,112,0,0" 
                  VerticalAlignment="Top" 
                  Width="229" 
                  FontSize="18">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã NV"
                                    Binding="{Binding MaNV}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ca"
                                    Binding="{Binding Ca}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ngày"
                                    Binding="{Binding Ngay, StringFormat='dd-MM-yyyy'}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker HorizontalAlignment="Left" Margin="404,128,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="299,131,0,0" TextWrapping="Wrap" Text="CHỌN NGÀY" VerticalAlignment="Top" Height="23" Width="86" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="299,175,0,0" TextWrapping="Wrap" Text="CHỌN CA" VerticalAlignment="Top" Height="21" Width="67" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="299,222,0,0" TextWrapping="Wrap" Text="NHÂN VIÊN" VerticalAlignment="Top" Height="18" Width="79" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="405,219,0,0" TextWrapping="Wrap" Text="TN0003" VerticalAlignment="Top" Width="101" FontWeight="Bold" FontSize="16"/>
        <ComboBox HorizontalAlignment="Left" Margin="405,174,0,0" VerticalAlignment="Top" Width="101"/>
        <Button Content="XÓA KHỎI LỊCH" HorizontalAlignment="Left" Margin="418,320,0,0" VerticalAlignment="Top" Width="101" Height="27" FontWeight="Bold" Background="#FFBABAE2"/>
        <Button Content="THÊM VÀO LỊCH" HorizontalAlignment="Left" Margin="283,320,0,0" VerticalAlignment="Top" Width="103" Height="27" FontWeight="Bold" Background="#FFBABAE2" RenderTransformOrigin="1.786,0.119"/>
        <Button Content="XÁC NHẬN" HorizontalAlignment="Left" Margin="349,365,0,0" VerticalAlignment="Top" Width="103" Height="27" FontWeight="Bold" Background="#FFBABAE2" />
        <TextBlock HorizontalAlignment="Left" Margin="34,85,0,0" TextWrapping="Wrap" Text="LỊCH LÀM VIỆC" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <DataGrid x:Name="dgvPhieuDangKy" HorizontalAlignment="Left" Height="235" Margin="534,112,0,0" VerticalAlignment="Top" Width="229" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="534,85,0,0" TextWrapping="Wrap" Text="PHIẾU ĐĂNG KÝ" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnDong" Content="QUAY LẠI" HorizontalAlignment="Left" Margin="482,365,0,0" VerticalAlignment="Top" Width="103" Height="27" FontWeight="Bold" Background="#FFBABAE2" Click="btnDong_Click" RenderTransformOrigin="-0.901,0.227"/>
        <Button Content="HỦY" HorizontalAlignment="Left" Margin="216,365,0,0" VerticalAlignment="Top" Width="103" Height="27" FontWeight="Bold" Background="#FFBABAE2" />
    </Grid>
</Window>
