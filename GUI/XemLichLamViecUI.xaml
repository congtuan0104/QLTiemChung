<Window x:Class="GUI.XemLichLamViecUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Lịch làm việc"
        Height="450"
        Width="600">
    <Grid>
        <Label Content="XEM LỊCH LÀM VIỆC"
               HorizontalAlignment="Left"
               Margin="176,22,0,0"
               VerticalAlignment="Top"
               Height="38"
               Width="264"
               FontFamily="Times New Roman"
               FontSize="24"
               FontWeight="Bold"
               Foreground="Red" />
        <DataGrid x:Name="dgvLichLamViec"
                  HorizontalAlignment="Left"
                  Height="227"
                  Margin="316,87,0,0"
                  VerticalAlignment="Top"
                  Width="233"
                  FontSize="18" />
        <DatePicker HorizontalAlignment="Left"
                    Margin="188,162,0,0"
                    VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="63,163,0,0"
                   TextWrapping="Wrap"
                   Text="ĐẾN NGÀY"
                   VerticalAlignment="Top"
                   Height="23"
                   Width="86"
                   FontSize="14" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="63,206,0,0"
                   TextWrapping="Wrap"
                   Text="CHỌN CA"
                   VerticalAlignment="Top"
                   Height="21"
                   Width="67"
                   FontSize="14" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="63,251,0,0"
                   TextWrapping="Wrap"
                   Text="NHÂN VIÊN"
                   VerticalAlignment="Top"
                   Height="18"
                   Width="79"
                   FontSize="14" />
        <TextBox HorizontalAlignment="Left"
                 Height="23"
                 Margin="187,251,0,0"
                 TextWrapping="Wrap"
                 Text="TN0003"
                 VerticalAlignment="Top"
                 Width="101"
                 FontWeight="Bold"
                 FontSize="16" />
        <ComboBox HorizontalAlignment="Left"
                  Margin="189,205,0,0"
                  VerticalAlignment="Top"
                  Width="101" />
        <Button x:Name="btnDong"
                Content="ĐÓNG"
                HorizontalAlignment="Left"
                Margin="446,341,0,0"
                VerticalAlignment="Top"
                Width="103"
                Height="37"
                FontWeight="Bold"
                Background="#FFBABAE2"
                Click="btnDong_Click" />
        <DatePicker HorizontalAlignment="Left"
                    Margin="187,112,0,0"
                    VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="62,114,0,0"
                   TextWrapping="Wrap"
                   Text="TỪ NGÀY"
                   VerticalAlignment="Top"
                   Height="23"
                   Width="86"
                   FontSize="14" />
        <Button x:Name="btnChinhSua"
                Content="CHỈNH SỬA LỊCH"
                HorizontalAlignment="Left"
                Margin="316,341,0,0"
                VerticalAlignment="Top"
                Width="103"
                Height="37"
                FontWeight="Bold"
                Background="#FFBABAE2"
                RenderTransformOrigin="0.683,0.422" />
        <Button x:Name="btnDangKy"
                Content="ĐĂNG KÝ LỊCH"
                HorizontalAlignment="Left"
                Margin="186,341,0,0"
                VerticalAlignment="Top"
                Width="103"
                Height="37"
                FontWeight="Bold"
                Background="#FFBABAE2" />
        <Button x:Name="btnXem_Lich"
                Content="XEM"
                HorizontalAlignment="Left"
                Margin="55,341,0,0"
                VerticalAlignment="Top"
                Width="103"
                Height="37"
                FontWeight="Bold"
                Background="#FFBABAE2"
                Click="btnXem_Lich_Click" />


    </Grid>
</Window>
